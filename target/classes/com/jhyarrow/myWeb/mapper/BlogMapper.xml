<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhyarrow.myWeb.mapper.BlogMapper">

    <select id="getBlog" parameterType="int" 
        resultType="com.jhyarrow.myWeb.domain.Blog">
        select * from blog where id=#{id}
    </select>
    
    <select id="getBlogList" resultType="com.jhyarrow.myWeb.domain.Blog" parameterType ="Map">
    	select (@rowno:=@rowno+1)rowno,b.* from blog b ,(select @rowno:=0)  t2 
    	<where>
    		<choose>
    			<when test="type!=null">
    				b.type like concat('%',#{type},'%')
    			</when>
    		</choose>
    	</where>
    	order by id limit #{offset},#{rows};
    </select>
    
    <insert id="addBlog" parameterType="com.jhyarrow.myWeb.domain.Blog">
    	insert into blog(title,info,inputDate,type)
    		values(#{title},#{info},now(),#{type})
    </insert>
    
    <select id="getBlogListCount" resultType="Integer" parameterType ="Map">
    	select count(*) from blog
    	<where>
    		<choose>
    			<when test="type!=null">
    				b.type like concat('%',#{type},'%')
    			</when>
    		</choose>
    	</where>
    </select>
</mapper>